
<!DOCTYPE html>
<html>
<head>
	<title>The Gossip Project - Users New</title>
</head>
<body>
	<h1>Users New</h1>
	<h2>Créé ton propre Compte</h2>

	<%= form_tag url_for(action: 'create'), method: "post" do %>

	  <%= label_tag 'Prénom' %>
	  <%= text_field_tag 'first_name', @user.first_name %>
	  <br /> <br />

	  <%= label_tag 'Nom' %>
	  <%= text_field_tag 'last_name', @user.last_name %>
	  <br /> <br />

	  <%= label_tag 'Description' %>
	  <%= text_field_tag 'description', @user.description %>
	  <br /> <br />

	  <%= label_tag 'Email' %>
	  <%= text_field_tag 'email', @user.email %>
	  <br /> <br />

	  <%= label_tag 'Age' %>
	  <%= text_field_tag 'age', @user.age %>
	  <br /> <br />

	  <%= label_tag 'Ville' %>
	  <%= text_field_tag 'city_id', @user.city_id %>
	  <br /> <br />

	  <%= label_tag 'Mot de passe' %>
	  <%= text_field_tag 'password', @user.password %>
	  <br /> <br />

	  <%= submit_tag "S'inscrire" %>

	<% end %>

</body>
</html>
